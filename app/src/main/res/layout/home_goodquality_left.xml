<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/grid_view_shape"
        android:layout_margin="15dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/goodQuality_lefts_icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/picsp" />

        <TextView
            android:id="@+id/goodQuality_lefts_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/goodQuality_lefts_icon"
            android:text="" />

        <TextView
            android:id="@+id/goodQuality_lefts_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/goodQuality_lefts_icon"
            android:text=""
            android:textColor="@color/color_db5044" />

    </RelativeLayout>

</LinearLayout>