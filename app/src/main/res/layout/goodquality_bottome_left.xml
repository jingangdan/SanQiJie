<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/goodQuality_bottom_left_rl"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1.3"
            android:clickable="true"
            android:padding="15dp">

            <TextView
                android:id="@+id/goodQuality_bottom_left_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/goodQuality_bottom_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goodQuality_bottom_left_name"
                android:text=""
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/goodQuality_bottom_left_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#eeeeee"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1.7"
            android:orientation="vertical"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/goodQuality_bottom_right_rlt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/goodQuality_bottom_right_timg"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_ttitle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_tcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/goodQuality_bottom_right_ttitle"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_tmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/goodQuality_bottom_right_tcontent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#eeeeee"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clickable="true"
                android:id="@+id/goodQuality_bottom_right_rlb"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/goodQuality_bottom_right_bimg"

                    android:layout_width="90dp"
                    android:layout_height="90dp" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_btitle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_bcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/goodQuality_bottom_right_btitle"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/goodQuality_bottom_right_bmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/goodQuality_bottom_right_bcontent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>