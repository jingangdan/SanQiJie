<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_68"
                android:animateLayoutChanges="true"
                android:paddingTop="@dimen/dp_20">

                <ImageView
                    android:id="@+id/iv_dadaafter_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/nav_left" />

                <TextView
                    android:id="@+id/tv_normal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:text="超值plus"
                    android:textColor="@color/titleColor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/iv_dadaafter_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dp_25"
                    android:gravity="bottom"
                    android:text="省钱有道"
                    android:textColor="#7a7f7d"
                    android:textSize="@dimen/dp_11" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20.5"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginTop="49dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">


                        <ImageView
                            android:id="@+id/tv_hysttj"
                            android:layout_width="wrap_content"
                            android:layout_height="68dp"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/mddd" />

                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_20.5"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginTop="@dimen/dp_32"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/addredframe"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_8.5">

                    <EditText
                        android:id="@+id/insert_room_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入ID号码"
                        android:textSize="@dimen/dp_12.5" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent"
                    android:background="@color/color_db5044"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查找"
                        android:textColor="@color/white" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_applireferee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_20.5"
                android:layout_marginTop="@dimen/dp_41"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/rightarrow"
                android:gravity="center_vertical"
                android:text="plus会员入口"
                android:textColor="@color/color_eb4d41"
                android:textSize="@dimen/dp_12.5" />

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="@dimen/dp_20.5"
                android:layout_marginRight="@dimen/dp_21"
                android:scaleType="fitXY"
                android:src="@drawable/content_pinshouqi" />

            <TextView
                android:id="@+id/about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="免单说明"
                android:textColor="#4d4d4d"
                android:layout_margin="10dp"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>